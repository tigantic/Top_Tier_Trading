# Example environment configuration for the crypto trading platform

# PostgreSQL configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=trading
POSTGRES_PORT=5432

# Redis configuration
REDIS_HOST=cache
REDIS_PORT=6379

# Coinbase API credentials (leave blank and populate in your local .env)
# COINBASE_API_KEY is your API key ID.  The secret itself should be stored
# separately in a PEM file and referenced via COINBASE_API_SECRET_FILE.
COINBASE_API_KEY=
COINBASE_PASSPHRASE=
# Path to the PEM file containing your API secret (e.g., Ed25519 private key).
COINBASE_API_SECRET_FILE=conf/coinbase_private_key.pem

# Optional OAuth configuration
COINBASE_CLIENT_ID=
COINBASE_CLIENT_SECRET=
COINBASE_RETAIL_PORTFOLIO_ID=

# Advanced Trade WebSocket JWT (for user channel).  Obtain via REST endpoint.
COINBASE_JWT=

# Trading configuration
ALLOWED_MARKETS=BTC-USD,ETH-USD,SOL-USD
LIVE_TRADING_DEFAULT=false
DRY_RUN=true
SAFE_MODE=true
MAX_ORDER_NOTIONAL=1000
MAX_ORDERS_PER_MINUTE=30

# Risk limits for open orders and price bands
MAX_OPEN_ORDERS=50
PRICE_BAND_PCT=2.5
DAILY_MAX_LOSS=10000

# Misc
LOG_LEVEL=info

# Paper trading and strategy configuration
PAPER_TRADING=true
STRATEGY_POLL_INTERVAL=10
STRATEGY_PRICE_DELTA_PCT=0.2
STRATEGY_SIZE=0.001

# Telemetry configuration
PROMETHEUS_PORT=9108
